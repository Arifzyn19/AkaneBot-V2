<!-- Header -->
<div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 space-y-4 sm:space-y-0">
    <h1 class="section-title !mb-0">Bot Management</h1>
    <div class="flex items-center space-x-2">
        <div class="w-2 h-2 bg-<%= botStatus ? 'green' : 'red' %>-500 rounded-full <%= botStatus ? 'animate-pulse' : '' %>"></div>
        <span class="text-lg font-medium text-<%= botStatus ? 'green' : 'red' %>-500">
            <%= botStatus ? 'Online' : 'Offline' %>
        </span>
    </div>
</div>

<!-- Bot Control Panel -->
<div class="card mb-8">
    <div class="flex items-center space-x-2 mb-6">
        <i data-lucide="settings" class="w-5 h-5 text-blue-500"></i>
        <h2 class="text-xl font-semibold text-[rgb(var(--color-text-primary))]">Bot Control Panel</h2>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <button 
            onclick="startBot()" 
            class="action-btn bg-green-500 hover:bg-green-600 disabled:bg-gray-600 disabled:opacity-50 <%= botStatus ? 'cursor-not-allowed' : '' %>"
            <%= botStatus ? 'disabled' : '' %>
        >
            <i data-lucide="play" class="w-5 h-5"></i>
            <span>Start Bot</span>
        </button>
        <button 
            onclick="stopBot()" 
            class="action-btn bg-red-500 hover:bg-red-600 disabled:bg-gray-600 disabled:opacity-50 <%= !botStatus ? 'cursor-not-allowed' : '' %>"
            <%= !botStatus ? 'disabled' : '' %>
        >
            <i data-lucide="stop-circle" class="w-5 h-5"></i>
            <span>Stop Bot</span>
        </button>
        <button 
            onclick="restartBot()" 
            class="action-btn bg-yellow-500 hover:bg-yellow-600"
        >
            <i data-lucide="refresh-cw" class="w-5 h-5"></i>
            <span>Restart Bot</span>
        </button>
        <button 
            onclick="reloadPlugins()" 
            class="action-btn bg-purple-500 hover:bg-purple-600"
        >
            <i data-lucide="puzzle" class="w-5 h-5"></i>
            <span>Reload Plugins</span>
        </button>
    </div>
</div>

<!-- Bot Information & Connection Status -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
    <!-- Bot Information -->
    <div class="card">
        <div class="flex items-center space-x-2 mb-6">
            <i data-lucide="info" class="w-5 h-5 text-blue-500"></i>
            <h2 class="text-xl font-semibold text-[rgb(var(--color-text-primary))]">Bot Information</h2>
        </div>
        <div class="space-y-4">
            <div class="flex justify-between items-center">
                <span class="text-[rgb(var(--color-text-secondary))]">Bot Name:</span>
                <span class="text-[rgb(var(--color-text-primary))] font-medium"><%= process.env.BOT_NAME || 'AkaneBot' %></span>
            </div>
            <div class="flex justify-between items-center">
                <span class="text-[rgb(var(--color-text-secondary))]">Prefix:</span>
                <code class="bg-[rgb(var(--color-bg-primary))] text-green-500 px-3 py-1 rounded-lg font-mono"><%= process.env.PREFIX || '!' %></code>
            </div>
            <div class="flex justify-between items-center">
                <span class="text-[rgb(var(--color-text-secondary))]">Auto Reconnect:</span>
                <span class="px-3 py-1 rounded-lg text-xs font-semibold bg-<%= process.env.AUTO_RECONNECT === 'true' ? 'green-500' : 'gray-600' %> text-white">
                    <%= process.env.AUTO_RECONNECT === 'true' ? 'Enabled' : 'Disabled' %>
                </span>
            </div>
            <div class="flex justify-between items-center">
                <span class="text-[rgb(var(--color-text-secondary))]">Log Level:</span>
                <span class="text-[rgb(var(--color-text-primary))] font-medium capitalize"><%= process.env.LOG_LEVEL || 'info' %></span>
            </div>
            <div class="flex justify-between items-center">
                <span class="text-[rgb(var(--color-text-secondary))]">Commands Directory:</span>
                <code class="bg-[rgb(var(--color-bg-primary))] text-blue-500 px-3 py-1 rounded-lg text-sm font-mono"><%= process.env.COMMANDS_DIR || 'src/commands' %></code>
            </div>
        </div>
    </div>

    <!-- Connection Status -->
    <div class="card">
        <div class="flex items-center space-x-2 mb-6">
            <i data-lucide="smartphone" class="w-5 h-5 text-green-500"></i>
            <h2 class="text-xl font-semibold text-[rgb(var(--color-text-primary))]">Connection Status</h2>
        </div>
        <div id="connectionInfo">
            <div class="text-center py-8">
                <div class="inline-flex items-center justify-center space-x-2 text-[rgb(var(--color-text-secondary))]">
                    <div class="animate-spin rounded-full h-6 w-6 border-2 border-blue-500 border-t-transparent"></div>
                    <span>Loading connection information...</span>
                </div>
            </div>
        </div>
        
        <div class="mt-6">
            <button onclick="showQRCode()" class="btn-secondary w-full">
                <i data-lucide="qr-code" class="w-4 h-4"></i>
                <span>Show QR Code</span>
            </button>
        </div>
    </div>
</div>

<!-- Plugin Management -->
<div class="card mb-8">
    <div class="flex items-center justify-between mb-6">
        <div class="flex items-center space-x-2">
            <i data-lucide="puzzle" class="w-5 h-5 text-purple-500"></i>
            <h2 class="text-xl font-semibold text-[rgb(var(--color-text-primary))]">Plugin Management</h2>
        </div>
        <button onclick="loadPluginList()" class="btn-secondary">
            <i data-lucide="refresh-cw" class="w-4 h-4"></i>
            <span>Refresh List</span>
        </button>
    </div>
    
    <p class="text-[rgb(var(--color-text-secondary))] mb-6">Manage bot plugins and commands</p>
    
    <div id="pluginList">
        <div class="text-center py-8">
            <i data-lucide="puzzle" class="w-12 h-12 text-[rgb(var(--color-text-secondary))] mx-auto mb-4"></i>
            <p class="text-[rgb(var(--color-text-secondary))]">Click "Refresh List" to load plugins</p>
        </div>
    </div>
</div>

<!-- Console Output -->
<div class="card !p-0 overflow-hidden">
    <div class="flex items-center justify-between p-6 border-b border-[rgb(var(--color-border))]">
        <div class="flex items-center space-x-2">
            <i data-lucide="terminal" class="w-5 h-5 text-green-500"></i>
            <h2 class="text-xl font-semibold text-[rgb(var(--color-text-primary))]">Console Output</h2>
        </div>
        <button onclick="clearConsole()" class="action-btn bg-red-500 hover:bg-red-600">
            <i data-lucide="trash-2" class="w-4 h-4"></i>
            <span>Clear</span>
        </button>
    </div>
    <div class="bg-black">
        <div 
            id="consoleOutput" 
            class="text-green-400 p-4 h-80 overflow-y-auto font-mono text-sm leading-relaxed"
        >
            <div class="text-gray-600">Console output will appear here...</div>
        </div>
    </div>
</div>

<!-- QR Code Modal -->
<div id="qrCodeModal" class="fixed inset-0 bg-black/50 backdrop-blur-sm hidden items-center justify-center z-50">
    <div class="card w-full max-w-md mx-4">
        <div class="flex items-center justify-between mb-6">
            <h3 class="text-lg font-semibold text-[rgb(var(--color-text-primary))]">WhatsApp QR Code</h3>
            <button onclick="closeQRCodeModal()" class="text-[rgb(var(--color-text-secondary))] hover:text-[rgb(var(--color-text-primary))] transition-colors">
                <i data-lucide="x" class="w-5 h-5"></i>
            </button>
        </div>
        <div id="qrCodeContainer" class="text-center">
            <div class="inline-flex items-center justify-center space-x-2 text-[rgb(var(--color-text-secondary))]">
                <div class="animate-spin rounded-full h-6 w-6 border-2 border-blue-500 border-t-transparent"></div>
                <span>Loading QR Code...</span>
            </div>
        </div>
    </div>
</div>

<script>
let socket;

document.addEventListener('DOMContentLoaded', function() {
    // Initialize Lucide icons
    lucide.createIcons();
    
    initializeSocket();
    loadConnectionInfo();
});

function initializeSocket() {
    socket = io();
    
    socket.emit('join-admin', { isAdmin: true });
    
    socket.on('connection-status', function(data) {
        updateConnectionStatus(data);
    });
    
    socket.on('qr-code', function(data) {
        addConsoleLog(`[QR] QR Code generated`, 'info');
    });
    
    socket.on('bot-log', function(data) {
        addConsoleLog(data.message, data.level);
    });
    
    socket.on('connection-update', function(data) {
        addConsoleLog(`[Connection] ${data.status}`, 'info');
    });
}

function updateConnectionStatus(data) {
    const connectionInfo = document.getElementById('connectionInfo');
    
    if (data.isConnected) {
        connectionInfo.innerHTML = `
            <div class="space-y-4">
                <div class="flex justify-between items-center">
                    <span class="text-[rgb(var(--color-text-secondary))]">Status:</span>
                    <span class="px-3 py-1 rounded-lg text-xs font-semibold bg-green-500 text-white">Connected</span>
                </div>
                <div class="flex justify-between items-center">
                    <span class="text-[rgb(var(--color-text-secondary))]">Phone Number:</span>
                    <span class="text-[rgb(var(--color-text-primary))] font-medium">${data.phoneNumber || 'N/A'}</span>
                </div>
                <div class="flex justify-between items-center">
                    <span class="text-[rgb(var(--color-text-secondary))]">Device:</span>
                    <span class="text-[rgb(var(--color-text-primary))] font-medium">${data.platform || 'Unknown'}</span>
                </div>
            </div>
        `;
    } else {
        connectionInfo.innerHTML = `
            <div class="text-center py-8">
                <i data-lucide="alert-circle" class="w-12 h-12 text-yellow-500 mx-auto mb-4"></i>
                <p class="text-[rgb(var(--color-text-primary))] font-medium mb-2">Not Connected</p>
                <p class="text-[rgb(var(--color-text-secondary))] text-sm">Scan QR code to connect</p>
            </div>
        `;
        lucide.createIcons();
    }
}

async function loadConnectionInfo() {
    try {
        const response = await fetch('/api/status');
        const data = await response.json();
        
        if (data.success) {
            updateConnectionStatus(data.data);
        }
    } catch (error) {
        console.error('Failed to load connection info:', error);
    }
}

async function startBot() {
    try {
        const response = await fetch('/bot/action/start', { method: 'POST' });
        const data = await response.json();
        
        if (data.success) {
            showToast('Bot starting...', 'success');
            addConsoleLog(`[${new Date().toLocaleTimeString()}] Bot starting...`, 'success');
            setTimeout(() => location.reload(), 2000);
        } else {
            showToast('Failed to start bot: ' + data.error, 'error');
        }
    } catch (error) {
        showToast('Failed to start bot', 'error');
        addConsoleLog(`[${new Date().toLocaleTimeString()}] Error: ${error.message}`, 'error');
    }
}

async function stopBot() {
    if (!confirm('Are you sure you want to stop the bot?')) return;
    
    try {
        const response = await fetch('/bot/action/stop', { method: 'POST' });
        const data = await response.json();
        
        if (data.success) {
            showToast('Bot stopping...', 'warning');
            addConsoleLog(`[${new Date().toLocaleTimeString()}] Bot stopping...`, 'warn');
            setTimeout(() => location.reload(), 2000);
        } else {
            showToast('Failed to stop bot: ' + data.error, 'error');
        }
    } catch (error) {
        showToast('Failed to stop bot', 'error');
        addConsoleLog(`[${new Date().toLocaleTimeString()}] Error: ${error.message}`, 'error');
    }
}

async function restartBot() {
    if (!confirm('Are you sure you want to restart the bot?')) return;
    
    try {
        const response = await fetch('/bot/action/restart', { method: 'POST' });
        const data = await response.json();
        
        if (data.success) {
            showToast('Bot restarting...', 'info');
            addConsoleLog(`[${new Date().toLocaleTimeString()}] Bot restarting...`, 'info');
            setTimeout(() => location.reload(), 3000);
        } else {
            showToast('Failed to restart bot: ' + data.error, 'error');
        }
    } catch (error) {
        showToast('Failed to restart bot', 'error');
        addConsoleLog(`[${new Date().toLocaleTimeString()}] Error: ${error.message}`, 'error');
    }
}

async function reloadPlugins() {
    try {
        const response = await fetch('/bot/action/reload-plugins', { method: 'POST' });
        const data = await response.json();
        
        if (data.success) {
            showToast('Plugins reloaded successfully', 'success');
            addConsoleLog(`[${new Date().toLocaleTimeString()}] Plugins reloaded`, 'success');
        } else {
            showToast('Failed to reload plugins: ' + data.error, 'error');
        }
    } catch (error) {
        showToast('Failed to reload plugins', 'error');
        addConsoleLog(`[${new Date().toLocaleTimeString()}] Error: ${error.message}`, 'error');
    }
}

async function showQRCode() {
    const modal = document.getElementById('qrCodeModal');
    modal.classList.remove('hidden');
    modal.classList.add('flex');
    lucide.createIcons();
    
    try {
        const response = await fetch('/api/qr');
        const data = await response.json();
        
        if (data.success && data.data.qr) {
            displayQRCode(data.data.qr);
        } else {
            document.getElementById('qrCodeContainer').innerHTML = `
                <div class="text-center text-[rgb(var(--color-text-secondary))] py-8">
                    <i data-lucide="alert-circle" class="w-12 h-12 mx-auto mb-4"></i>
                    <p class="text-lg mb-2">QR Code not available</p>
                    <p class="text-sm">Bot may already be connected</p>
                </div>
            `;
            lucide.createIcons();
        }
    } catch (error) {
        document.getElementById('qrCodeContainer').innerHTML = `
            <div class="text-center text-red-500 py-8">
                <i data-lucide="x-circle" class="w-12 h-12 mx-auto mb-4"></i>
                <p class="text-lg mb-2">Failed to load QR Code</p>
                <p class="text-sm">Please try again later</p>
            </div>
        `;
        lucide.createIcons();
    }
}

function closeQRCodeModal() {
    const modal = document.getElementById('qrCodeModal');
    modal.classList.add('hidden');
    modal.classList.remove('flex');
}

function displayQRCode(qrData) {
    document.getElementById('qrCodeContainer').innerHTML = `
        <div class="text-center">
            <div class="bg-white p-4 rounded-xl inline-block mb-4">
                <img src="data:image/png;base64,${qrData}" alt="QR Code" class="max-w-xs w-full h-auto">
            </div>
            <p class="text-[rgb(var(--color-text-secondary))] mb-2">Scan this QR code with WhatsApp</p>
            <p class="text-[rgb(var(--color-text-secondary))] text-sm">QR code expires in 60 seconds</p>
        </div>
    `;
}

function loadPluginList() {
    const pluginList = document.getElementById('pluginList');
    
    pluginList.innerHTML = `
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <div class="bg-[rgb(var(--color-bg-primary))] border border-green-500 rounded-xl p-4 hover:border-green-400 transition-colors">
                <div class="flex items-center justify-between">
                    <div>
                        <h3 class="text-[rgb(var(--color-text-primary))] font-semibold">General Commands</h3>
                        <p class="text-[rgb(var(--color-text-secondary))] text-sm">5 commands loaded</p>
                    </div>
                    <span class="px-3 py-1 bg-green-500 text-white text-xs font-semibold rounded-lg">Active</span>
                </div>
            </div>
            <div class="bg-[rgb(var(--color-bg-primary))] border border-green-500 rounded-xl p-4 hover:border-green-400 transition-colors">
                <div class="flex items-center justify-between">
                    <div>
                        <h3 class="text-[rgb(var(--color-text-primary))] font-semibold">Media Commands</h3>
                        <p class="text-[rgb(var(--color-text-secondary))] text-sm">4 commands loaded</p>
                    </div>
                    <span class="px-3 py-1 bg-green-500 text-white text-xs font-semibold rounded-lg">Active</span>
                </div>
            </div>
            <div class="bg-[rgb(var(--color-bg-primary))] border border-green-500 rounded-xl p-4 hover:border-green-400 transition-colors">
                <div class="flex items-center justify-between">
                    <div>
                        <h3 class="text-[rgb(var(--color-text-primary))] font-semibold">Utility Commands</h3>
                        <p class="text-[rgb(var(--color-text-secondary))] text-sm">6 commands loaded</p>
                    </div>
                    <span class="px-3 py-1 bg-green-500 text-white text-xs font-semibold rounded-lg">Active</span>
                </div>
            </div>
        </div>
    `;
}

function addConsoleLog(message, level = 'info') {
    const consoleOutput = document.getElementById('consoleOutput');
    const timestamp = new Date().toLocaleTimeString();
    
    const logEntry = document.createElement('div');
    logEntry.className = `console-entry text-${getLogColor(level)} mb-1`;
    logEntry.innerHTML = `<span class="text-gray-600">[${timestamp}]</span> ${message}`;
    
    consoleOutput.appendChild(logEntry);
    consoleOutput.scrollTop = consoleOutput.scrollHeight;
    
    // Keep only last 100 entries
    while (consoleOutput.children.length > 100) {
        consoleOutput.removeChild(consoleOutput.firstChild);
    }
}

function getLogColor(level) {
    switch (level) {
        case 'error': return 'red-400';
        case 'warn': return 'yellow-400';
        case 'success': return 'green-400';
        case 'info': return 'blue-400';
        default: return 'green-400';
    }
}

function clearConsole() {
    document.getElementById('consoleOutput').innerHTML = 
        '<div class="text-gray-600">Console cleared...</div>';
}

function showToast(message, type = 'info') {
    const toastContainer = document.getElementById('toastContainer');
    
    const colorClasses = {
        'success': 'bg-green-500 border-green-400',
        'error': 'bg-red-500 border-red-400', 
        'warning': 'bg-yellow-500 border-yellow-400',
        'info': 'bg-blue-500 border-blue-400'
    };
    
    const iconMap = {
        'success': 'check-circle',
        'error': 'x-circle',
        'warning': 'alert-triangle', 
        'info': 'info'
    };
    
    const toastId = 'toast-' + Date.now();
    const toastHtml = `
        <div id="${toastId}" class="flex items-center space-x-3 ${colorClasses[type]} text-white px-4 py-3 rounded-xl shadow-lg border transform translate-x-full transition-transform duration-300">
            <i data-lucide="${iconMap[type]}" class="w-5 h-5 flex-shrink-0"></i>
            <span class="flex-1">${message}</span>
            <button onclick="closeToast('${toastId}')" class="text-white hover:text-gray-200 transition-colors">
                <i data-lucide="x" class="w-4 h-4"></i>
            </button>
        </div>
    `;
    
    toastContainer.insertAdjacentHTML('beforeend', toastHtml);
    lucide.createIcons();
    
    const toastElement = document.getElementById(toastId);
    setTimeout(() => {
        toastElement.classList.remove('translate-x-full');
    }, 100);
    
    setTimeout(() => {
        closeToast(toastId);
    }, 5000);
}

function closeToast(toastId) {
    const toast = document.getElementById(toastId);
    if (toast) {
        toast.classList.add('translate-x-full');
        setTimeout(() => {
            toast.remove();
        }, 300);
    }
}

// Close modal when clicking outside
document.addEventListener('click', function(event) {
    const qrModal = document.getElementById('qrCodeModal');
    if (event.target === qrModal) {
        closeQRCodeModal();
    }
});

// Handle escape key to close modal
document.addEventListener('keydown', function(event) {
    if (event.key === 'Escape') {
        closeQRCodeModal();
    }
});
</script>
