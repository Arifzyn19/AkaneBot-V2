# AkaneBot Configuration

# Bot Information
BOT_NAME=AkaneBot
PREFIX=!

# Owner Configuration (Required)
OWNER_NUMBERS=628123456789,628987654321
ADMIN_NUMBERS=628111111111,628222222222

# Connection Method (Choose one)
# Option 1: Pairing Code (Recommended)
USE_PAIRING_CODE=true
PAIRING_NUMBER=628123456789

# Option 2: QR Code
# PRINT_QR=true

# Bot Options
AUTO_RECONNECT=true
LOG_LEVEL=info

# Database Configuration
DB_MODE=json
DB_PATH=database.json
# MONGO_URI=mongodb://localhost:27017/whatsapp-bot

# API Keys (Optional but recommended)
# OpenAI API for AI commands
# OPENAI_API_KEY=sk-your-openai-api-key

# OpenWeatherMap API for weather commands
# OPENWEATHER_API_KEY=your-openweather-api-key

# NewsAPI for news commands
# NEWS_API_KEY=your-news-api-key

# Commands Directory
COMMANDS_DIR=src/commands
